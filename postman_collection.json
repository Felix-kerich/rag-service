{
  "info": {
    "name": "Maize RAG Service API",
    "description": "Complete API collection for testing the RAG service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8088",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "test_user_123",
      "type": "string"
    },
    {
      "key": "conversation_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Document Management",
      "item": [
        {
          "name": "Ingest Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documents\": [\n    {\n      \"id\": \"doc1\",\n      \"text\": \"Maize requires well-drained soil with pH between 5.5 and 7.0. The crop grows best in warm conditions with temperatures between 20-30Â°C.\",\n      \"metadata\": {\n        \"source\": \"farming_guide\",\n        \"category\": \"soil\"\n      }\n    },\n    {\n      \"id\": \"doc2\",\n      \"text\": \"Plant maize seeds 2-3 cm deep with spacing of 75cm between rows and 25cm between plants. Optimal planting time is at the beginning of the rainy season.\",\n      \"metadata\": {\n        \"source\": \"planting_guide\",\n        \"category\": \"planting\"\n      }\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/ingest",
              "host": ["{{base_url}}"],
              "path": ["ingest"]
            }
          }
        },
        {
          "name": "Upload Files",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/ingest/files",
              "host": ["{{base_url}}"],
              "path": ["ingest", "files"]
            }
          }
        }
      ]
    },
    {
      "name": "Query",
      "item": [
        {
          "name": "Query (New Conversation)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.collectionVariables.set('conversation_id', response.conversation_id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is the best soil pH for maize?\",\n  \"user_id\": \"{{user_id}}\",\n  \"k\": 4\n}"
            },
            "url": {
              "raw": "{{base_url}}/query",
              "host": ["{{base_url}}"],
              "path": ["query"]
            }
          }
        },
        {
          "name": "Query (Continue Conversation)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What about fertilizer requirements?\",\n  \"user_id\": \"{{user_id}}\",\n  \"conversation_id\": \"{{conversation_id}}\",\n  \"k\": 4\n}"
            },
            "url": {
              "raw": "{{base_url}}/query",
              "host": ["{{base_url}}"],
              "path": ["query"]
            }
          }
        }
      ]
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "Create Conversation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.collectionVariables.set('conversation_id', response.conversation_id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"title\": \"Maize Farming Questions\",\n  \"metadata\": {\n    \"platform\": \"postman\",\n    \"test\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/conversations",
              "host": ["{{base_url}}"],
              "path": ["conversations"]
            }
          }
        },
        {
          "name": "Get Conversation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/conversations/{{conversation_id}}",
              "host": ["{{base_url}}"],
              "path": ["conversations", "{{conversation_id}}"]
            }
          }
        },
        {
          "name": "List User Conversations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}/conversations?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}", "conversations"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Update Conversation",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated: Maize Farming Guide\",\n  \"metadata\": {\n    \"archived\": false,\n    \"updated_via\": \"postman\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/conversations/{{conversation_id}}",
              "host": ["{{base_url}}"],
              "path": ["conversations", "{{conversation_id}}"]
            }
          }
        },
        {
          "name": "Delete Conversation",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/conversations/{{conversation_id}}?user_id={{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["conversations", "{{conversation_id}}"],
              "query": [
                {
                  "key": "user_id",
                  "value": "{{user_id}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
